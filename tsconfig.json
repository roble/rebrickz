{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"allowJs": false,
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": "src",
		"paths": {
			"@rebrickz/*": ["rebrickz/*"],
			"@rebrickz": ["rebrickz"],
			"@config": ["config.ts"],
			"@helpers": ["helpers.ts"],
			"@scenes/*": ["scenes/*"],
			"@objects/*": ["objects/*"],
			"@assets/*": ["assets/*"]
		},
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
